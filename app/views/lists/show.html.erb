<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.lambesc.fr/fileadmin/user_upload/cinema.jpg);">
  <div class="container">
    <h1> <%= @list.name %> </h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-ghost" %>
  </div>
</div>

<div class="cards">

  <% @list.bookmarks.each do |bookmark| %>
    <div class="card ">
      <%= image_tag bookmark.movie.poster_url, width: 200 %>
      <div class="card-title d-flex justify-content-between">
        <h4> <%= bookmark.movie.title %> </h4>
        <p> <%= bookmark.movie.rating %> ⭐️ </p>
      </div>
      <p> <%= bookmark.movie.overview %> </p>
      <div class="card-comment d-flex justify-content-between">
        <p> ❝ <%= bookmark.comment %> </p>
        <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure ?"}, class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>

</div>

<%= link_to "Back to all Lists", root_path, class:"btn btn-flat" %>
