<div class="banner">
    <img src="https://www.lambesc.fr/fileadmin/user_upload/cinema.jpg" alt="">

    <div class="container">
      <h1>Lists of movies</h1>
      <p>Share your best movies with us!</p>
      <a class="btn btn-flat" href="#">Apply now</a>
      <%= link_to "Create a movie list", new_list_path, class:"btn btn-flat" %>
    </div>

  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    Breakfast
    <ul>
      <% @lists.each do |list| %>
        <li> <%= link_to list.name, list_path(list) %> </li>
      <% end %>
    </ul>
  </div>
</div>
